---
import MainLayout from '../layouts/MainLayout.astro';

const skills = [
  { name: 'TypeScript', icon: 'üíª' },
  { name: 'React', icon: '‚öõÔ∏è' },
  { name: 'Astro', icon: 'üöÄ' },
  { name: 'Tailwind CSS', icon: 'üé®' }
];

const projects = [
  {
    name: 'Personal Website',
    description: 'Modern portfolio built with Astro and Tailwind CSS',
    technologies: ['Astro', 'Tailwind CSS', 'TypeScript'],
    link: '#'
  }
];
---

<MainLayout title="Atriox-lir | Software Engineer">
  <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-500 via-purple-500 to-pink-500 text-white">
    <div class="text-center max-w-2xl px-4">
      <h1 class="text-5xl font-bold mb-4 animate-fade-in">Hi, I'm Atriox-lir</h1>
      <p class="text-xl mb-8 animate-fade-in delay-200">
        A passionate software engineer crafting innovative digital experiences.
      </p>
      <div class="flex justify-center space-x-4">
        <a href="#about" class="bg-white text-blue-600 px-6 py-3 rounded-full hover:bg-blue-50 transition">
          Learn More
        </a>
        <a href="#projects" class="border border-white px-6 py-3 rounded-full hover:bg-white/20 transition">
          View Projects
        </a>
      </div>
    </div>
  </section>

  <section id="about" class="py-16 bg-white dark:bg-gray-800">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8">About Me</h2>
      <div class="max-w-2xl mx-auto text-center">
        <p class="text-lg mb-8">
          I'm a software engineer passionate about creating elegant, performant web applications 
          that solve real-world problems. With a focus on modern web technologies, I love building 
          intuitive and responsive user experiences.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          {skills.map((skill) => (
            <div class="bg-gray-100 dark:bg-gray-700 px-4 py-2 rounded-full flex items-center space-x-2">
              <span>{skill.icon}</span>
              <span>{skill.name}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <section id="projects" class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8">Projects</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projects.map((project) => (
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 hover:shadow-xl transition">
            <h3 class="text-xl font-semibold mb-4">{project.name}</h3>
            <p class="mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.technologies.map((tech) => (
                <span class="bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 px-2 py-1 rounded-full text-sm">
                  {tech}
                </span>
              ))}
            </div>
            <a href={project.link} class="text-blue-600 hover:underline">
              View Project
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section id="contact" class="py-16 bg-white dark:bg-gray-800">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8">Contact Me</h2>
      <form 
        name="contact" 
        method="POST" 
        netlify-honeypot="bot-field" 
        data-netlify="true" 
        class="max-w-md mx-auto bg-gray-100 dark:bg-gray-700 p-8 rounded-lg shadow-md"
      >
        <input type="hidden" name="form-name" value="contact" />
        <p class="hidden">
          <label>
            Don't fill this out if you're human: 
            <input name="bot-field" />
          </label>
        </p>
        <div class="mb-4">
          <label htmlFor="name" class="block mb-2 text-gray-700 dark:text-gray-300">Name</label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            required 
            class="w-full px-3 py-2 border rounded-md dark:bg-gray-600 dark:border-gray-500"
            placeholder="Your Name"
          />
        </div>
        <div class="mb-4">
          <label htmlFor="email" class="block mb-2 text-gray-700 dark:text-gray-300">Email</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            class="w-full px-3 py-2 border rounded-md dark:bg-gray-600 dark:border-gray-500"
            placeholder="you@example.com"
          />
        </div>
        <div class="mb-6">
          <label htmlFor="message" class="block mb-2 text-gray-700 dark:text-gray-300">Message</label>
          <textarea 
            id="message" 
            name="message" 
            rows={4} 
            required 
            class="w-full px-3 py-2 border rounded-md dark:bg-gray-600 dark:border-gray-500"
            placeholder="Your message..."
          ></textarea>
        </div>
        <button 
          type="submit" 
          class="w-full bg-blue-600 text-white py-3 rounded-md hover:bg-blue-700 transition"
        >
          Send Message
        </button>
      </form>
    </div>
  </section>
</MainLayout>

<style>
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }

  .delay-200 {
    animation-delay: 0.2s;
  }
</style>
