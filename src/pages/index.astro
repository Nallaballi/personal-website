---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Atriox-lir | Personal Website">
  <section class="min-h-screen flex items-center justify-center text-center">
    <div>
      <h1 class="text-5xl md:text-6xl font-bold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">
        Atriox-lir
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        Welcome to my personal space on the web. Stay tuned for updates about my journey.
      </p>
      <div class="mt-8 space-x-4">
        <a 
          href="/#about" 
          class="bg-blue-600 text-white px-6 py-3 rounded-full hover:bg-blue-700 transition"
        >
          Learn More
        </a>
        <a 
          href="/#contact" 
          class="border border-blue-600 text-blue-600 px-6 py-3 rounded-full hover:bg-blue-50 dark:hover:bg-gray-800 transition"
        >
          Contact Me
        </a>
      </div>
    </div>
  </section>

  <section id="about" class="py-16">
    <h2 class="text-3xl font-bold text-center mb-8">About Me</h2>
    <div class="max-w-4xl mx-auto text-center">
      <p class="text-lg text-gray-600 dark:text-gray-300">
        I'm a passionate individual eager to explore, learn, and grow. This website is a work in progress, 
        reflecting my ongoing journey of personal development.
      </p>
    </div>
  </section>

  <section id="projects" class="py-16 bg-gray-100 dark:bg-gray-800">
    <h2 class="text-3xl font-bold text-center mb-8">Projects</h2>
    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {[1, 2, 3].map(() => (
        <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md hover:shadow-xl transition">
          <h3 class="text-xl font-semibold mb-4">Placeholder Project</h3>
          <p class="text-gray-600 dark:text-gray-300">
            Details coming soon. This is where you'll showcase your amazing work.
          </p>
        </div>
      ))}
    </div>
  </section>

  <section id="contact" class="py-16">
    <h2 class="text-3xl font-bold text-center mb-8">Contact</h2>
    <div class="max-w-md mx-auto">
      <form id="contactForm" class="space-y-4">
        <input 
          type="text" 
          name="name" 
          placeholder="Name" 
          required
          class="w-full p-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600"
        />
        <input 
          type="email" 
          name="email" 
          placeholder="Email" 
          required
          class="w-full p-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600"
        />
        <textarea 
          name="message"
          placeholder="Your Message" 
          rows="4" 
          required
          class="w-full p-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600"
        ></textarea>
        <div id="formStatus" class="text-center text-sm mb-4"></div>
        <button 
          type="submit" 
          class="w-full bg-blue-600 text-white py-3 rounded-full hover:bg-blue-700 transition"
        >
          Send Message
        </button>
      </form>
    </div>
  </section>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('contactForm');
      const statusDiv = document.getElementById('formStatus');

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        statusDiv.textContent = '';
        statusDiv.className = 'text-center text-sm mb-4';

        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());

        try {
          // Simulate form submission (replace with actual backend endpoint)
          const response = await fetch('https://formspree.io/f/YOUR_FORMSPREE_ENDPOINT', {
            method: 'POST',
            body: formData,
            headers: {
              'Accept': 'application/json'
            }
          });

          if (response.ok) {
            statusDiv.textContent = 'Message sent successfully!';
            statusDiv.className += ' text-green-600';
            form.reset();
          } else {
            throw new Error('Form submission failed');
          }
        } catch (error) {
          statusDiv.textContent = 'Oops! There was a problem sending your message.';
          statusDiv.className += ' text-red-600';
          console.error('Form submission error:', error);
        }
      });
    });
  </script>
</MainLayout>
