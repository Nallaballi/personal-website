---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Thank You - Atriox-lir">
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-500 via-purple-500 to-pink-500">
    <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-xl text-center max-w-md">
      <h1 class="text-3xl font-bold mb-4 text-blue-600 dark:text-blue-400">Thank You!</h1>
      <p class="text-gray-700 dark:text-gray-300 mb-6">
        Your message has been successfully submitted. I'll get back to you soon.
      </p>
      <a 
        href="/" 
        class="bg-blue-600 text-white px-6 py-3 rounded-full hover:bg-blue-700 transition"
      >
        Return to Homepage
      </a>
    </div>
  </div>
</MainLayout>
